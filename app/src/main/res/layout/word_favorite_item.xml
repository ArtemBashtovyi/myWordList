<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
        <TextView
            android:id="@+id/main_field_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_field_text_view"
            android:textStyle="bold"
            android:text="TextView"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/image_clear_favorite"
            android:layout_toStartOf="@+id/image_clear_favorite" />

        <ImageView
            android:id="@+id/image_clear_favorite"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:srcCompat ="@drawable/ic_clear_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/second_field_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_field_text_view"
            android:text="TextView"
            android:paddingTop="10dp"
            android:layout_below="@id/main_field_text_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/image_clear_favorite"
            android:layout_toStartOf="@+id/image_clear_favorite" />

</RelativeLayout>