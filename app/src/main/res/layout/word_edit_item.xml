<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"
    android:layout_marginEnd="@dimen/word_item_root_view_margin_right"
    android:layout_marginRight="@dimen/word_item_root_view_margin_right"
    android:padding="10dp"
    >
        <TextView
            android:id="@+id/main_field_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/main_field_text_view"
            android:textStyle="bold"
            android:text="TextView" />

        <TextView
            android:id="@+id/second_field_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_field_text_view"
            android:text="TextView"
            android:layout_below="@id/main_field_text_view"
            android:layout_toLeftOf="@+id/checked_text_item"
            android:layout_toStartOf="@+id/checked_text_item" />

        <CheckedTextView
            android:id="@+id/checked_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkMark="?android:attr/listChoiceIndicatorSingle"
            android:checkMarkTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/second_field_text_view">

        </CheckedTextView>

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_mode_edit_black_24dp"
            android:layout_below="@+id/second_field_text_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>