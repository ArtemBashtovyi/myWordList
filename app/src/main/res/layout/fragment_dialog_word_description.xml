<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_description_title"
        android:text="@string/hint_edit_text_engVersion" />

    <TextView
        android:id="@+id/eng_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:textSize="@dimen/dialog_description_content"
         />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_description_title"
        android:text="@string/hint_edit_text_uaVersion" />

    <TextView
        android:id="@+id/ua_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textSize="@dimen/dialog_description_content"
        android:layout_marginBottom="16dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/word_red_state_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:background="@drawable/red_circle_state"

                 />

            <ImageView
                android:id="@+id/word_yellow_state_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:background="@drawable/yellow_circle_state"
                />

            <ImageView
                android:id="@+id/word_green_state_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="4dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:background="@drawable/green_circle_state"
                 />
        </LinearLayout>

    <ImageView
        android:id="@+id/favorite_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        app:srcCompat="@drawable/ic_unfavorite_border_black_24dp" />

    </RelativeLayout>


</LinearLayout>